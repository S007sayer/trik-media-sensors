-stack 0x2000
-heap 0x10000

MEMORY
{
    L1DRAM      o = 0x11F04000 l = 0x000c000
    DDR         o = 0x80000000 l = 0x1000000
}

SECTIONS
{
  .csl_vect > DDR

  .kernel
  {
    *.obj (.text:optimized) 
  }  SIZE(_kernel_size) > DDR

  .fardata: > DDR
  .neardata > DDR
  .rodata   > DDR
  .sysmem   > DDR
  .text     > DDR
  .bss      > DDR
  .switch   > DDR
  .cinit    > DDR
  .data     > DDR
  .const    > DDR
  .far      > DDR
  .stack    > DDR
  .cio      > DDR
  .reset    > DDR
}

